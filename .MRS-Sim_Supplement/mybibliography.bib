arxivId = {1411.4280},
author = {Tompson, Jonathan and Goroshin, Ross and Jain, Arjun and LeCun, Yann and Bregler, Christoph},
doi = {10.1109/CVPR.2015.7298664},
eprint = {1411.4280},
