doi = {10.1002/nbm.4204},
file = {:home/john/Documents/Research/Literature/Spectroscopy/NBM 2021 Consesus Papers/Additional/Feasibility of 31P spectroscopic imaging at 7T in lung carcinoma patients.pdf:pdf},
issn = {10991492},
