doi = {10.1002/nbm.4218},
file = {:home/john/Documents/Research/Literature/Spectroscopy/NBM 2021 Consesus Papers/Across-vendor standardization of semi-LASER for single-voxel MRS at 3T.pdf:pdf},
issn = {10991492},
journal = {NMR in Biomedicine},
