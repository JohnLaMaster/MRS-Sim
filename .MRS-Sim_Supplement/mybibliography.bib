file = {:home/john/Documents/Research/Literature/Prospective frequency and motion correction for edited 1H magnetic resonance spectroscopy.pdf:pdf},
issn = {10959572},
journal = {NeuroImage},
keywords = {Gamma-aminobutyric acid (GABA),Glutathione (GSH),HERMES,PRESS},
pages = {117922},
pmid = {33662573},
publisher = {Elsevier Inc.},
title = {{Prospective frequency and motion correction for edited 1H magnetic resonance spectroscopy}},
