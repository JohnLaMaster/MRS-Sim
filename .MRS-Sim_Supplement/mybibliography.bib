doi = {10.1002/nbm.4285},
file = {:home/john/Documents/Research/Literature/Spectroscopy/NBM 2021 Consesus Papers/Additional/Application of low-rank approximation using truncated singularvalue decomposition for noise reduction.pdf:pdf},
