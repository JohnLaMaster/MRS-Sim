pmid = {9017194},
publisher = {Elsevier},
title = {{The use of matrix methods in the modeling of spectroscopic data sets}},
url = {http://dx.doi.org/10.1016/S0006-3495(97)78703-4},
volume = {72},
year = {1997}
}
