doi = {10.1002/mrm.28385},
file = {:home/john/Documents/Research/Literature/Temp_lit/2020.02.17.949495v1.full.pdf:pdf;:home/john/Documents/Research/Literature/Adaptive Baseline Fitting for 1HMR Spectroscopy Analysis.pdf:pdf},
