pages = {1--17},
title = {{Acceleration and Quantitation of Localized Correlated Spectroscopy using Deep Learning: A Pilot Simulation Study}},
url = {http://arxiv.org/abs/1806.11068%0Ahttp://dx.doi.org/10.1038/s41598-021-88158-y},
year = {2018}
}
@article{Wright2021,
